@model PhoneBook.Models.Contact


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>




<form id="formPhoneBook">
    <div class="container text-center">
        <div class="row">
            <div class="col pt-2">
                <span>Name</span><br /><input type="text" id="txtName" name="Name"/>
            </div>
        </div>
        <div class="row">
            <div class="col pt-2">
                <span>Surname</span><br /><input type="text" id="txtSurname" name="Surname"/>
            </div>
        </div>
        <div class="row">
            <div class="col pt-2">
                <span>Phone Number</span><br /><input type="text" id="txtPhoneNumber" name="Number"/>
            </div>
        </div>
        <div class="row">
            <div class="col pt-2">
                <span>E-Mail</span><br /><input type="text" id="txtEmail" name="Email"/>
            </div>
        </div>
        <div class="row">
            <div class="col pt-2">
                <input type="submit" id="btnSave" value="Kaydet" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
<script>
    $(document).ready(function () {
        $("#btnSave").click(function (e) {
            var formData = $("#formPhoneBook").serialize();
            alert(formData);
            $.ajax({
                url: "/Home/getFormVal",
                type: "POST",
                dataType: 'json',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                data: formData
            });

        });
    });
</script>